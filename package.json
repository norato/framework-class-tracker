{
  "name": "framework-class-tracker",
  "version": "1.1.0",
  "description": "CLI tool to analyze and report used CSS classes in your project compared to framework classes (e.g., Bootstrap).",
  "main": "dist/index.js",
  "bin": {
    "framework-class-tracker": "dist/index.js"
  },
  "scripts": {
    "test": "vitest run --coverage",
    "test:watch": "vitest --coverage",
    "build": "tsup",
    "link": "pnpm build && pnpm link --global"
  },
  "keywords": [
    "css",
    "bootstrap",
    "cli",
    "class-tracker",
    "framework",
    "utility-classes",
    "optimization"
  ],
  "author": "Felipe Norato Lacerda",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/norato/framework-class-tracker"
  },
  "bugs": {
    "url": "https://github.com/norato/framework-class-tracker/issues"
  },
  "homepage": "https://github.com/norato/framework-class-tracker#readme",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "3.2.4",
    "bootstrap": "^5.3.7",
    "commander": "^14.0.0",
    "eslint": "^9.31.0",
    "execa": "^9.6.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}