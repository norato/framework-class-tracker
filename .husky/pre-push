#!/bin/sh

echo "ğŸ” Running pre-push checks..."

# Run prettier check
echo "ğŸ“ Checking code formatting..."
pnpm prettier --check "src/**/*.ts" "tests/**/*.ts"
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Run 'pnpm prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"' to fix."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
pnpm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before pushing."
  exit 1
fi

# Run build
echo "ğŸ”¨ Building project..."
pnpm build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix the build errors before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"